<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<VBox maxWidth="Infinity"
      alignment="CENTER"
      spacing="20"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8"
      fx:controller="com.ajsworton.controllers.SettingsPanel">
    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER" styleClass="heading">
        Exam Display Configuration
    </Label>
    <GridPane  GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER">
        <Label alignment="CENTER_RIGHT" textAlignment="RIGHT">Centre Number: </Label>
        <TextField fx:id="centreInput" onKeyReleased="#handleTextChange"
                   GridPane.rowIndex="0" GridPane.columnIndex="1" />
    </GridPane>
</VBox>